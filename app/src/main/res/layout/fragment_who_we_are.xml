<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WhoWeAreFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/pic"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Who We Are?"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgView" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Biasa Aja Esports adalah tim esports yang berfokus pada kompetisi di berbagai game populer. Meskipun membawa nama &quot;Biasa Aja,&quot; kami selalu berupaya untuk menunjukkan performa luar biasa di setiap turnamen. Tim ini dibentuk oleh sekelompok pemain berbakat yang memiliki semangat dan dedikasi tinggi dalam dunia gaming kompetitif. Kami bermain di berbagai cabang esports, termasuk Mobile Legends, Valorant, Dota 2, dan lain sebagainya dengan tujuan untuk menjadi salah satu tim terkuat di kancah esports nasional maupun internasional. Biasa Aja Esports percaya bahwa kerja sama tim, strategi yang matang, dan mental juara adalah kunci untuk mencapai kemenangan di setiap kompetisi. Bersama-sama, kami siap menghadapi tantangan dan terus berkembang untuk mencapai prestasi terbaik di dunia esports."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

        <Button
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="0"
            app:icon="@android:drawable/star_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>